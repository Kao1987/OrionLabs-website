{
  "name": "personal-brand-website",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "echo '� 啟動開發環境 (連接線上後端)...' && vite --mode remote",
    "dev:remote": "echo '🌐 連接線上後端開發模式...' && vite --mode remote",
    "dev:docker": "echo '🐳 本地Docker後端開發模式...' && vite --mode docker",
    "dev:local": "echo '🏠 本地全端開發模式...' && vite --mode local",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:prod": "run-p type-check \"build-only --mode production {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "lint:bem": "node scripts/bem-validator.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:changed-coverage": "node scripts/changed-coverage.js",
    "test:tri-run": "vitest run --reporter=json --outputFile=tests/_reports/run1.json && vitest run --reporter=json --outputFile=tests/_reports/run2.json && vitest run --reporter=json --outputFile=tests/_reports/run3.json",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:dark-mode": "playwright test tests/dark-mode-comprehensive.spec.ts",
    "test:install": "playwright install",
    "test:api": "node scripts/api-test.js",
    "test:login": "node scripts/login-memory-test.js",
    "test:api-connections": "bash scripts/test-api-connections.sh",
    "validate:theme": "bash scripts/theme-validation.sh",
    "validate:bem": "node scripts/bem-validator.js",
    "deploy": "bash scripts/deploy.sh",
    "css:performance": "node scripts/css-performance-monitor.js",
    "css:analyze": "node scripts/css-optimizer.js",
    "css:critical": "node scripts/critical-css-extractor.js",
    "performance:test": "node scripts/performance-test.cjs",
    "performance:audit": "yarn build && yarn performance:test",
    "security:env": "node scripts/validate-env.js",
    "security:check": "yarn security:env",
    "pre-deploy": "yarn security:check && yarn type-check && yarn test:run",
    "tunnel:start": "bash scripts/ssh-tunnel.sh start",
    "tunnel:stop": "bash scripts/ssh-tunnel.sh stop",
    "tunnel:status": "bash scripts/ssh-tunnel.sh status",
    "docker:dev": "bash scripts/ssh-tunnel.sh docker",
    "docker:stop": "docker-compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "axios": "^1.10.0",
    "bootstrap": "5",
    "bootstrap-icons": "^1.13.1",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "marked": "^16.1.1",
    "pinia": "^3.0.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.2",
    "@playwright/test": "^1.54.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.6",
    "puppeteer": "^24.17.0",
    "sass-embedded": "^1.90.0",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.8"
  }
}
